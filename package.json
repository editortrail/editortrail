{
  "name": "editortrail",
  "displayName": "editortrail",
  "description": "Trail of all your editor activities, tab, bookmark, view, edit, chat with AI",
  "version": "0.0.1",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/editortrail/editortrail"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "editortrail.helloWorld",
        "title": "EditorTrail Hello World"
      },
      {
        "command": "editortrail.saveTabs",
        "title": "EditorTrail: Save Current Tabs",
        "icon": "$(save)"
      },
      {
        "command": "editortrail.restoreTabs",
        "title": "EditorTrail: Restore Tabs",
        "icon": "$(folder-opened)"
      },
      {
        "command": "editortrail.refreshSavedTabs",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "editortrail.renameTabState",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "editortrail.deleteTabState",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "editortrail.viewTabState",
        "title": "View Details",
        "icon": "$(eye)"
      },
      {
        "command": "editortrail.openTabFile",
        "title": "Open File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "editortrail",
          "title": "EditorTrail",
          "icon": "$(history)"
        }
      ]
    },
    "views": {
      "editortrail": [
        {
          "id": "editortrail.savedTabs",
          "name": "Saved Tabs",
          "enableDragAndDrop": true
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "editortrail.saveTabs",
          "when": "view == editortrail.savedTabs",
          "group": "navigation"
        },
        {
          "command": "editortrail.refreshSavedTabs",
          "when": "view == editortrail.savedTabs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "editortrail.restoreTabs",
          "when": "view == editortrail.savedTabs && viewItem == savedTabState",
          "group": "inline"
        },
        {
          "command": "editortrail.viewTabState",
          "when": "view == editortrail.savedTabs && viewItem == savedTabState",
          "group": "1_view"
        },
        {
          "command": "editortrail.renameTabState",
          "when": "view == editortrail.savedTabs && viewItem == savedTabState",
          "group": "2_edit"
        },
        {
          "command": "editortrail.deleteTabState",
          "when": "view == editortrail.savedTabs && viewItem == savedTabState",
          "group": "3_delete"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
